<div class="row justify-content-center">
  <div class="col-xl-8 col-lg-9 col-md-10 my-3">
    <h2>Add a new task</h2>

    {{! Add a title }}
    <form action="/create" method="POST">
      <div class="row justify-content-center">
        <div class="col-12 mt-3 mb-1">
          <label for="title">Title</label>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-12 my-1">
          <input
            type="text"
            id="title"
            class="form-control"
            name="title"
            required
          />
        </div>
      </div>

      {{! Add a description }}
      <div class="row justify-content-center">
        <div class="col-12 mt-3 mb-1">
          <label for="description">Description</label>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="col-12 my-1">
          <textarea
            id="description"
            class="form-control"
            name="description"
            required
          ></textarea>
        </div>
      </div>

      <label for="category">Category</label>
      <select id="category" name="category">
        <option value="Sports" selected>Sports</option>
        <option value="Studying" selected>Studying</option>
        <option value="Work" selected>Work</option>
        <option value="Social Life" selected>Social Life</option>
        <option value="Other" selected>Other</option>
      </select>

      {{! Tabs }}
      <ul class="nav nav-tabs" id="new-task-tab" role="tablist">
        <li class="nav-item mt-3" role="presentation">
          <button
            class="nav-link active"
            id="once-tab"
            data-bs-toggle="tab"
            data-bs-target="#once"
            type="button"
            role="tab"
            aria-controls="home"
            aria-selected="true"
          >Add task once</button>
        </li>
        <li class="nav-item mt-3" role="presentation">
          <button
            class="nav-link"
            id="weekly-tab"
            data-bs-toggle="tab"
            data-bs-target="#weekly"
            type="button"
            role="tab"
            aria-controls="profile"
            aria-selected="false"
          >Schedule task weekly</button>
        </li>
      </ul>

      {{! This block only shows when the "once" tab is active }}
      <div class="tab-content mx-4 my-2" id="new-task-tab-content">
        <div
          class="tab-pane fade show active"
          id="once"
          role="tabpanel"
          aria-labelledby="once-tab"
        >

          <div class="row justify-content-center">
            <div class="col-12 my-2">
              <label for="specificDate">Choose a date</label>
            </div>
          </div>

          <div class="row justify-content-center">
            <div class="col-12 my-1">
              <input type="date" id="specificDate" name="specificDate" />
            </div>
          </div>

          <div class="row justify-content-center">
            <div class="col-12 my-4">
              <input type="submit" value="Add task" class="btn btn-primary" />
            </div>
          </div>
        </div>

        {{! This block only shows when "weekly" tab is active }}
        <div
          class="tab-pane fade"
          id="weekly"
          role="tabpanel"
          aria-labelledby="weekly-tab"
        >
          <div id="days" class="row justify-content-center">
            <div class="col-12 m-2">
              <label for="daysOfWeek"><p>For which days do you want to schedule
                  this task?</p></label>
            </div>
            <div class="col-12 m-1">
              <input
                type="checkbox"
                id="Sunday"
                name="daysOfWeek"
                value="Sunday"
              />
              <label for="Sunday">Sunday</label>
            </div>

            <div class="col-12 m-1">
              <input
                type="checkbox"
                id="Monday"
                name="daysOfWeek"
                value="Monday"
              />
              <label for="Monday">Monday</label>
            </div>

            <div class="col-12 m-1">
              <input
                type="checkbox"
                id="Tuesday"
                name="daysOfWeek"
                value="Tuesday"
              />
              <label for="Tuesday">Tuesday</label>
            </div>
            <div class="col-12 m-1">
              <input
                type="checkbox"
                id="Wednesday"
                name="daysOfWeek"
                value="Wednesday"
              />
              <label for="Wednesday">Wednesday</label>
            </div>
            <div class="col-12 m-1">
              <input
                type="checkbox"
                id="Thursday"
                name="daysOfWeek"
                value="Thursday"
              />
              <label for="Thursday">Thursday</label>
            </div>
            <div class="col-12 m-1">
              <input
                type="checkbox"
                id="Friday"
                name="daysOfWeek"
                value="Friday"
              />
              <label for="Friday">Friday</label>
            </div>
            <div class="col-12 m-1">
              <input
                type="checkbox"
                id="Saturday"
                name="daysOfWeek"
                value="Saturday"
              />
              <label for="Saturday">Saturday</label>
            </div>

            <div class="row justify-content-center">
              <div class="col-12 my-4">
                <input
                  type="submit"
                  value="Add recurring task"
                  class="btn btn-primary"
                />
              </div>
            </div>
          </div></div>
      </div>

    </form>

  </div>
</div>

