<h1>Edit the activity "{{findActivity.title}}"</h1>

<form action='/schedule/{{findActivity._id}}' method='POST'>

	<label for='title'>Title</label>
	<input type='text' id='title' name='title' value='{{findActivity.title}}' />
	<br />
	<label for='description'>Description</label>
	<input type='text' id='description' name='description' value='{{findActivity.description}}' />
	<br />

	<label for='date'>Date</label>
	<input
		type='date'
		id='date'
		name='specificDate'
		pattern='\d{4}-\d{2}-\d{2}'
		value='{{findActivity.specificDate}}'
	/>

	<br />
	<label for='category'>Category</label>
	<select id='category' name='category'>
		<option value='Sports'>Sports</option>
		<option value='Studying'>Studying</option>
		<option value='Work'>Work</option>
		<option value='Social Life'>Social Life</option>
		<option value='Other'>Other</option>
		<option hidden value='{{findActivity.category}}' selected>{{findActivity.category}}</option>

	</select>
	<br />
	<input type='submit' value='Edit One' name='update' />
	<br />
	<input type='submit' value='Edit All' name='update' />

</form>

<form action='/schedule/{{findActivity._id}}' method='POST'>
	<input type='hidden' name='_id' value='{{findActivity._id}}' />
	<input type='hidden' name='specificDate' value='{{findActivity.specificDate}}' />
	<input type='submit' name='update' value='Procrastinate' />

</form>

<form action='/schedule/{{findActivity._id}}?_method=DELETE' method='POST'>
	<input type='submit' value='Delete Activity' name='terminate' />
</form>

<form action='/schedule/{{findActivity._id}}?_method=DELETE' method='POST'>
	<input type='submit' value='Delete Activity and Group' name='terminate' />
</form>