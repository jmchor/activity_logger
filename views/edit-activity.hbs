<h1>Edit the activity "{{findActivity.title}}"</h1>

<form action='/schedule/{{findActivity._id}}' method='POST'>

	<div class='row justify-content-center'>
		<div class='col-12 mt-3 mb-1'>
			<label for='title'>Title</label>
		</div>
	</div>
	<div class='row justify-content-center'>
		<div class='col-12 my-1'>
			<input
				type='text'
				id='title'
				name='title'
				class='form-control'
				value='{{findActivity.title}}'
			/>
		</div>
	</div>
	<div class='row justify-content-center'>
		<div class='col-12 mt-3 mb-1'>
			<label for='description'>Description</label>
		</div>
	</div>
	<div class='row justify-content-center'>
		<div class='col-12 my-1'>
			<textarea
				id='description'
				class='form-control'
				name='description'
				required
			>{{findActivity.description}}</textarea>
		</div>
	</div>
	<div class='row justify-content-center'>
		<div class='col-12 my-2'>
			<label for='date'>Date</label>
		</div>
	</div>

	<div class='row justify-content-center'>
		<div class='col-12 my-1'>
			<input
				type='date'
				id='date'
				name='specificDate'
				pattern='\d{4}-\d{2}-\d{2}'
				value='{{findActivity.specificDate}}'
			/>
		</div>
	</div>

	<div class='row justify-content-center'>
		<div class='col-12 mt-3 mb-1'>
			<label for='category'>Category</label>
		</div>
	</div>

	<select id='category' name='category' class='form-select form-select-sm' aria-label='.form-select-sm example'>
		<option value='Sports'>Sports</option>
		<option value='Studying'>Studying</option>
		<option value='Work'>Work</option>
		<option value='Social Life'>Social Life</option>
		<option value='Other'>Other</option>
		<option hidden value='{{findActivity.category}}' selected>{{findActivity.category}}</option>

	</select>

	<div class='d-grid gap-2 col-10 mx-auto my-3'>

		<input type='submit' value='Edit One' name='update' class='btn btn-dark p-3' />
		<input type='submit' value='Edit All' name='update' class='btn btn-outline-dark' />

	</div>

</form>

<form action='/schedule/{{findActivity._id}}' method='POST'>
	<input type='hidden' name='_id' value='{{findActivity._id}}' />
	<input type='hidden' name='specificDate' value='{{findActivity.specificDate}}' />
	<div class='d-grid gap-2 col-6 mx-auto'>
		<input type='submit' name='update' value='Procrastinate' class='btn btn-warning mt-3' />
	</div>
</form>

<form action='/schedule/{{findActivity._id}}?_method=DELETE' method='POST'>
	<div class='d-grid gap-2 col-6 mx-auto'>

		<input type='submit' value='Delete Activity' name='terminate' class='btn btn-danger mt-5 me-md-2' />
	</div>

</form>

<form action='/schedule/{{findActivity._id}}?_method=DELETE' method='POST'>
	<div class='d-grid gap-2 col-8 mx-auto'>
		<input type='submit' value='Delete Activity Group' name='terminate' class='btn btn-danger mt-2' />
	</div>
</form>