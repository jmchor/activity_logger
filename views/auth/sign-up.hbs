<div id="login-content" class="row justify-content-center">
  <div
    class="col-xxl-4 col-xl-5 col-lg-6 col-md-7 col-12 pt-3"
    id="register-box"
  >

    {{! Page title }}
    <div class="row justify-content-center px-3 py-5">
      <h1>New</h1>
      <h1>Account</h1>
    </div>

    <div id="login-lower-half" class="row justify-content-center px-3 py-5">

      <form action="/signup" method="POST">

        <div class="col-auto my-2">
          <input
            class="form-input"
            placeholder="Username"
            type="text"
            id="username"
            class="form-control"
            name="username"
            required
          />
        </div>

        <div class="col-auto my-2">
          <input
            class="form-input"
            placeholder="Email"
            type="text"
            id="email"
            class="form-control"
            name="email"
            required
          />
        </div>

        <div class="col-auto my-2">
          <input
            class="form-input"
            placeholder="Password"
            type="password"
            id="password"
            class="form-control"
            name="password"
            required
          />
        </div>

        <div class="col-auto my-2">
          <input
            class="form-input"
            placeholder="Confirm Password"
            type="password"
            id="confirm"
            class="form-control"
            name="confirm"
            required
          />
        </div>

        <div class="col-auto my-2">
          <select
            class="dropdown-style col-12 my-2"
            name="securityQuestion"
            id="security"
          >
            <option value="animal">What is the name of your pet?</option>
            <option value="father">What is your father's last name?</option>
            <option value="place">What is your favourite place in the world?</option>
          </select>
        </div>
        <div class="col-auto my-2">
          <input
            class="form-input"
            placeholder="Answer"
            type="text"
            id="security"
            class="form-control"
            name="passwordResetAnswer"
            required
          />
        </div>

        {{#if errorMessage}}
          <h5 class="text-danger text-center pb-3">{{errorMessage}}</h5>
        {{/if}}

        {{! Button group }}
        <div class="row d-flex justify-content-center">
          <div class="btn-group w-100">
            <input
              class="btn btn-secondary flex-fill"
              type="submit"
              value="Sign up"
            />
          </div>
        </div>

        <div class="divider d-flex align-items-center my-2">
          <p class="text-center mx-3 mb-0 text-muted">OR</p>
        </div>

        <div class="row justify-content-center">
          <div class="btn-group w-100">
            <a class="btn btn-outline-secondary flex-fill" href="/login">Log In</a>
          </div>
        </div>

      </form>
    </div>
  </div>
</div>