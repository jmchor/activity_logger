<div id="login-content" class="row justify-content-center">
  <div
    class="col-xxl-4 col-xl-5 col-lg-6 col-md-7 col-12 pt-3 shadow-lg"
    id="login-box"
  >
    <div class="row justify-content-center px-3 py-5">
      <h1>Security</h1>
      <h1>Question</h1>
    </div>

    {{! Pool ladder image }}
    <div id="ladder-container" class="px-3">
      <img id="ladder-img" src="/images/icons/pool-ladder.png" />
    </div>
    <div id="login-lower-half" class="row justify-content-center px-3 py-5">

      <div class="row justify-content-center">
        <div class="col">
          <p>Howdy, {{user.username}}!</p>
          <p>To reset your password, please answer your personal security
            question.</p>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="col">
          <h4>{{message}}</h4>

          <form action="/answer" method="POST">
            <label for="answer">Answer</label>
            <input type="text" id="answer" name="passwordResetAnswer" />
            <input type="hidden" name="_id" value="{{user._id}}" />
            <button type="submit">Submit</button>
          </form>
        </div>
      </div>

      {{! Error message for wrong answer }}
      {{#if errorMessage}}
        <h5 class="text-danger text-center">{{errorMessage}}</h5>
      {{/if}}

      {{#if successMessage}}
        <h5 class="text-success text-center">{{successMessage}}</h5>
      {{/if}}

    </div>
  </div>
</div>