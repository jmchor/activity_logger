<div id="main-content" class="row justify-content-center">
  <div
    class="col-xxl-8 col-xl-8 col-lg-8 col-md-7 col-12 p-3"
    id="content-box"
  >
<div class="row justify-content-center">
  <div class="col-md-12 col-11">

  {{!-- Error message --}}
  {{#if errorMessage}}
    <div class="col-md-12 col-11">
      <div class="alert alert-danger" role="alert">
        {{{errorMessage}}}
      </div>
    </div>

  {{else}}

  {{!-- Greeting --}}

      {{! Page title }}
    <div id="page-title" class="row p-3">
      <div class="col-auto p-3">
        <img src="/images/icons/home.png" width="60px" />
      </div>
      <div class="col-auto py-3">
        <h2>Howdy, {{{user.username}}}!</h2>
      </div>
    </div>

  {{#if comingWeekActivities}}
  <div class="row justify-content-center">
    <h3 class="col-md-10 col-11 my-2">Here's your agenda for today, {{date}}</h3>
  </div>

  {{#each comingWeekActivities}}
    <div class="row justify-content-center">
      <div class="col-md-10 col-11 my-2 p-3 border rounded">
		  {{> day}}
      </div>
	  </div>
  {{/each}}

  {{else}}
    <div class="row justify-content-center">
	  	<h3 class="col-md-12 col-11 my-4">There's nothing planned yet for today.</h3>
    </div>

  {{!-- Add new task button --}}
      <div class="row justify-content-center">
		    <div class="col-auto">
			    <a href="/create" class="btn btn-primary">Add a new task</a>
		    </div>
	    </div>
    {{/if}}
  {{/if}}

  {{!-- Random fact --}}
      <div class="row justify-content-center">
        <div class="col-md-10 col-11 my-2 p-3">
          {{> randomfact}}
        </div>
      </div>


    </div>
  </div>

