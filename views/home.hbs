<div class="row justify-content-center">
  <div class="col-xxl-8 col-xl-8 col-lg-10 col-md-10 my-3">
    <h2> Welcome back, {{{user.username}}}!</h2>
  </div>

{{#if comingWeekActivities}}
  <div class="row justify-content-center">
    <h3 class="col-xxl-8 col-xl-8 col-lg-10 col-md-10 my-2">Here's your agenda for today <i class="bi bi-arrow-down-short"></i></h3>
  </div>

  {{#each comingWeekActivities}}
    <div class="row justify-content-center row my-4 py-2">
    <div class="col-xxl-8 col-xl-8 col-lg-10 col-md-10 my-1 p-1 border rounded">
		{{> day}}
    </div>
	</div>
  {{/each}}

{{else}}
		<h3 class="col-xxl-8 col-xl-8 col-lg-10 col-md-10 my-4">There's nothing planned yet for today.</h3>
    </div>
    <div class="row justify-content-center">
		<div class="col-auto">
			<a href="/create" class="btn btn-primary">Add a new task</a>
		</div>
	</div>
{{/if}}

		{{> randomfact}}

</div>

<script>

window.onload = function() {
  const homeButton = document.querySelector('.home-button');
  homeButton.setAttribute('href', '#')
};

</script>