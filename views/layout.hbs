<html lang='en'>

	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<meta http-equiv='X-UA-Compatible' content='ie=edge' />
		<title>{{appTitle}}</title>
		<link
			href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css'
			rel='stylesheet'
			integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC'
			crossorigin='anonymous'
		/>
		<link rel='stylesheet' href='/stylesheets/style.css' />
	</head>

	<body>

		{{#if loggedOut}}
			<!-- Display only header with logo and simple footer for logged out users -->
			<nav id='top-nav' class='navbar navbar-expand-md navbar-light'>
				<div id='logo'>
					<h1>
						<a href='/' id='logo' class='navbar-brand'>logo</a>
					</h1>
				</div>
			</nav>
			<main id='main' class='container'>
				{{{body}}}
			</main>
			<footer>Developed by Johannes, Lukas and Nana</footer>

		{{else}}
			<!-- Display header and footer navigation for logged in users -->

			<nav id='top-nav' class='navbar navbar-expand-md navbar-light'>
				<div id='logo'>
					<h1>
						<a href='/' id='logo' class='navbar-brand'>logo</a>
					</h1>
				</div>
				<button
					class='navbar-toggler'
					type='button'
					data-bs-toggle='collapse'
					data-bs-target='#toggleMobileMenu'
					aria-control='toggleMobileMenu'
					aria-expanded='false'
					aria-table='Toggle navigation'
				>
					<span class='navbar-toggler-icon'></span>
				</button>
				<div class='collapse navbar-collapse' id='toggleMobileMenu'>
					<ul class='navbar-nav ms-auto text-center'>
						<li><a href='#'>User Profile</a></li>
						<li>
							<form action='/logout' method='POST'>
								<input
									type='submit'
									value='Log Out'
									class='btn btn-primary'
								/>
							</form>
						</li>
					</ul>
				</div>

			</nav>

			<main id='main' class='container'>
				{{{body}}}
			</main>
			<footer>
				<nav
					id='bottom-nav'
					class='navbar fixed-bottom navbar-dark bg-dark justify-content-center'
				>
					<ul class='nav justify-content-center text-center'>

						<div class='nav-item mx-2'>
							<a href='/home' id='menu-button' class='btn btn-primary'>
								<div><i class='bi bi-house'></i></div>
								<div>Home</div>
							</a>
						</div>

						<div class='nav-item mx-2'>
							<a href='/schedule' id='menu-button' class='btn btn-primary'>
								<div><i class='bi bi-calendar-week'></i></div>
								<div>Schedule</div>
							</a>
						</div>

						<div class='nav-item mx-2'>
							<a href='/create' id='menu-button' class='btn btn-primary'>
								<div><i class='bi bi-plus-square'></i></div>
								<div>Add Task</div>
							</a>
						</div>

					</ul>
				</nav>
			</footer>
		{{/if}}

		<script src='/js/script.js'></script>
		<script
			src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js'
			integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM'
			crossorigin='anonymous'
		></script>
	</body>

</html>